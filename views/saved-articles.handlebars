<div class="container">
    <div class="jumbotron text-center">
        <h1>Saved Articles</h1>
        <p>Digg Edition</p>
    </div>
    <div id="savedArticlesContainer">
        {{#each data}}
        <div class="panel panel-default" data-id="{{_id}}">
            <div class="panel-heading">
                <h3 class="panel-title">{{headline}}</h3>
            </div>
            <div class="panel-body">{{summary}}</div>
            <div class="panel-footer clearfix">
                <a class="btn btn-danger pull-right delete-article">Delete Article</a>
                <a class="btn btn-default pull-right view-comments">View Comments</a>
            </div>
        </div>
        {{else}}
        <h3 class="text-center">No articles to display!</h3>
        {{/each}}
    </div>
</div>

<div id="notesModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Article Notes for <span id="articleId"></span></h4>
            </div>
            <div class="modal-body text-center">
                <ul id="articleNotesList" class="list-group"></ul>
                <textarea id="noteText" rows="3" class="form-control" placeholder="Enter note here"></textarea>
            </div>
            <div class="modal-footer clearfix">
                <button id="saveNote" type="button" class="btn btn-success pull-right" data-dismiss="modal">Save Note</button>
            </div>
        </div>
    </div>
</div>