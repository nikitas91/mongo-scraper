<div class="container">
    <div class="jumbotron text-center">
        <h1>Mongo Scraper</h1>
        <p>Digg Edition</p>
    </div>
    <div id="articleContainer">
        {{#each data}}
        <div class="panel panel-default" data-id="{{_id}}">
            <div class="panel-heading">
                <h3 class="panel-title">{{headline}}</h3>
            </div>
            <div class="panel-body">{{summary}}</div>
            <div class="panel-footer clearfix">
                <a class="btn btn-success pull-right save-article">Save Article</a>
                <a href="{{url}}" target="_blank" class="btn btn-default pull-right">View Article</a>
            </div>
        </div>
        {{else}}
        <h3 class="text-center">No articles to display!</h3>
        {{/each}}
    </div>
</div>

<div id="alertModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Scrape Alert</h4>
            </div>
            <div class="modal-body text-center">
                <h2 id="alertMessage"></h2>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>